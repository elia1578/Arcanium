                    elseif v:IsA("ParticleEmitter") or v:IsA("Trail") then
                        v.Enabled = false
                    elseif v:IsA("PostEffect") then
                        v.Enabled = false
                    end
                end
                
                Rayfield:Notify({
                    Title = "Quality Lowered",
                    Content = "Textures and effects have been optimized.",
                    Duration = 3
                })
            end)
        end,
    })

